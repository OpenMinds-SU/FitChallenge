@model Fmi.OpenMinds.FitChallenge.Models.Exercise
@using Fmi.OpenMinds.FitChallenge.Models

@if (Model.Id == 0)
{ 
    <h2>Create exercise</h2>
}
else
{
    <h2>Edit exercise</h2>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Url)
        @Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = "Enter URL" })
    </div>
    <div class="form-group">
        @Html.Label("Muscle Group: ")
        @Html.DropDownListFor(m => m.MainMuscleGroup, new SelectList(Enum.GetNames(typeof(MuscleGroupType))), new { @class = "form-control" })
    </div>
    <input type="submit" value="Save" class="btn btn-default" />
    @Html.ActionLink("Cancel", "Index", "Exercise", new { }, new { @class = "btn btn-default" })
}