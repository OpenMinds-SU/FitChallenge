@model IEnumerable<Fmi.OpenMinds.FitChallenge.Models.Exercise>
@{
    ViewBag.Title = "Index";
}

<h2>Exercises</h2>

<button type="button" class="btn btn-default" name="Create" onclick="location.href='@Url.Action("Create","Exercise")'">
    Create
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</button>

<p>&nbsp;</p>  @* space before the table*@

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Url</th>
            <th>Main muscle group</th>
            <th width="200">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exercise in Model)
        {
            <tr>
                <td>@exercise.Name</td>
                <td> <a href=@exercise.Url>@exercise.Url</a></td>
                <td>@exercise.MainMuscleGroup</td>
                <td>
                    @if (exercise.UserId != null)
                    { 
                    <div class="btn-group" role="group">
                        <a class="btn btn-default" href="@Url.Action("Edit", "Exercise", new { Id = exercise.Id })">
                            Edit
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-default" href="@Url.Action("Delete", "Exercise", new { Id = exercise.Id })">
                            Delete
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
                        </a>
                    </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button type="button" class="btn btn-default" name="Back" onclick="location.href='@Url.Action("Index", "Home")'">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Back
    </button>
</div>