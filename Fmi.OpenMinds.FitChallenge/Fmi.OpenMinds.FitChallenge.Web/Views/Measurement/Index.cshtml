@model IEnumerable<Fmi.OpenMinds.FitChallenge.Models.Measurement>
@using Fmi.OpenMinds.FitChallenge.Models
@{
    ViewBag.Title = "Index";
}

<h2>Measurements</h2>

<button type="button" class="btn btn-default" name="Create" onclick="location.href=@Url.Action("Create", "Measurement")">
    Create
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</button>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            @foreach (var measurementType in Enum.GetValues(typeof(MeasurementType)))
            {
                <th>@measurementType</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var measurement in Model)
            {
                <td>@measurement.Date</td>
                @foreach (var measurementValue in measurement.MeasurementValues)
                {
                    <td>@measurementValue.Value</td>
                }
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-default" href="@Url.Action("Edit", "Measurement", new { Id = measurement.Id })">
                            Edit
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-default" href="@Url.Action("Delete", "Measurement", new { Id = measurement.Id })">
                            Delete
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </div>
                </td>
            }
        </tr>
    </tbody>
</table>

<button class="btn btn-default" type="button" name="Back" onclick="location.href=@Url.Action("Index","Home")">
    Back
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
</button>

