@model IEnumerable<Fmi.OpenMinds.FitChallenge.Models.MuscleGroup>
@{
    ViewBag.Title = "Muscle Groups";
}

<h2>Muscle Groups</h2>

<button type="button" class="btn btn-default" name="Create" onclick="location.href='@Url.Action("Create", "MuscleGroup")'">
Create
<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</button>

<p>&nbsp;</p>  @* space*@

<table class="table table-striped table-hover table-bordered">
<thead>
<tr>
        <th>Id</th>
        <th>Name</th>
        <th width="200">Actions</th>
    </tr>
</thead>
<tbody>
    @foreach(var muscleGroup in Model)
    { 
        <tr>
            <td>@muscleGroup.Id</td>
            <td>@muscleGroup.Name</td>
            <td>
                <div class="btn-group" role="group">
                <a class="btn btn-default" href="@Url.Action("Edit", "MuscleGroup", new { Id = muscleGroup.Id })">
                    Edit
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a class="btn btn-default" href="@Url.Action("Delete", "MuscleGroup", new { Id = muscleGroup.Id })">
                    Delete
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
                </div>
            </td>
            </tr>
    }
</tbody>
</table>

<div>
    <button type="button" class="btn btn-default" name="Back" onclick="location.href='@Url.Action("Index", "Home")'">
       <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
       Back
    </button>
</div>
