@model IEnumerable<Fmi.OpenMinds.FitChallenge.Models.MuscleGroup>
@{
    ViewBag.Title = "Muscle Groups";
}

<h2>Muscle Groups</h2>
<table class="table table-striped table-hover table-bordered">
<thead>
<tr>
        <th>Actions</th>
        <th>Id</th>
        <th>Name</th>
    </tr>
</thead>
<tbody>
    @foreach(var muscleGroup in Model)
    { 
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", "MuscleGroup", new { Id = muscleGroup.Id }, new { }) 
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> |
                @Html.ActionLink("Delete", "Delete", "MuscleGroup", new { Id = muscleGroup.Id }, new { })
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </td>
            <td>@muscleGroup.Id</td>
            <td>@muscleGroup.Name</td>
            <td>
                <button type="button" name="Edit" onclick="location.href='@Url.Action("Edit", "MuscleGroup", new { Id = muscleGroup.Id })'">
                Edit
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button type="button" name="Delete" onclick="location.href='@Url.Action("Delete", "MuscleGroup", new { Id = muscleGroup.Id })'">
                Delete
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </td>
            </tr>
    }
</tbody>
</table>
@Html.ActionLink("Create", "Create", "MuscleGroup")
<button type="button" name="Delete" onclick="location.href='@Url.Action("Create", "MuscleGroup")'">
Create
<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</button>
