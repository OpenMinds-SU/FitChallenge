@model IEnumerable<Fmi.OpenMinds.FitChallenge.Models.Workout>
@{    
    ViewBag.Title = "Workouts";
}

<h2>Workouts</h2>

<button type="button" class="btn btn-default" name="Create" onclick="location.href='@Url.Action("Create", "Workout")'">
    Create
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</button>

<p>&nbsp;</p>  @* space*@

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Muscle Groups</th>
            <th>Exercises</th>
            <th width="200">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workout in Model)
        {
            <tr>
                <td>@workout.Name</td>
                <td>
                    <ul>
                    @foreach (var workoutMuscleGroup in @workout.WorkoutMuscleGroups)
                    {
                        <li>@workoutMuscleGroup.MuscleGroup</li>
                    }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var workoutExercise in @workout.WorkoutExercises)
                        {
                            <li>@workoutExercise.Exercise.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    @if (workout.UserId != null)
                    { 
                    <div class="btn-group" role="group">
                        <a class="btn btn-default" href="@Url.Action("Edit", "Workout", new { Id = workout.Id })">
                            Edit
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-default" href="@Url.Action("Delete", "Workout", new { Id = workout.Id })">
                            Delete
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </div>
                    }
                </td>                
            </tr>
        }
    </tbody>
</table>

<div>
    <button type="button" class="btn btn-default" name="Back" onclick="location.href='@Url.Action("Index", "Home")'">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Back
    </button>
</div>