@model IEnumerable<Fmi.OpenMinds.FitChallenge.Models.Workout>
@{    
    ViewBag.Title = "Workouts";
}

<h2>Workouts</h2>

<button type="button" class="btn btn-default" name="Create" onclick="location.href='@Url.Action("Create", "Workout")'">
    Create
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
</button>

<p>&nbsp;</p>  @* space*@

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>UserId</th>
            <th>MuscleGroups</th>
            <th>Exercises</th>
            <th width="200">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workout in Model)
        {
            <tr>
                <td>@workout.Id</td>
                <td>@workout.Name</td>
                <td>@workout.UserId</td>
                <td>
                    @foreach (var muscleGroup in @workout.MuscleGroups)
                    {
                        @muscleGroup.Name
                    }
                    @workout.MuscleGroups.Count
                </td>
                <td>
                    @foreach (var exercise in @workout.Exercises)
                    {
                        @exercise.Name
                    }
                    @workout.Exercises.Count
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-default" href="@Url.Action("Edit", "Workout", new { Id = workout.Id })">
                            Edit
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-default" href="@Url.Action("Delete", "Workout", new { Id = workout.Id })">
                            Delete
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </div>
                </td>                
            </tr>
        }
    </tbody>
</table>

<div>
    <button type="button" class="btn btn-default" name="Back" onclick="location.href='@Url.Action("Index", "Home")'">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Back
    </button>
</div>